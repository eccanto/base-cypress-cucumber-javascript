{
  "name": "base-cypress-cucumber-javascript",
  "version": "1.0.0",
  "description": "BDD, Cypress + Cucumber + Javascript",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "pretest": "rm -rf cypress/screenshots cypress/videos",
    "test": "cypress run",
    "tag:smoke": "cypress run --env tags='@smoke'",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "BDD",
    "cucumber",
    "cypress",
    "javascript",
    "qa",
    "testing"
  ],
  "author": {
    "name": "Erik Ccanto",
    "email": "ccanto.erik@gmail.com",
    "url": "https://github.com/eccanto"
  },
  "license": "MIT",
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^16.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^12.8.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^8.36.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsonc": "^2.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": [
      "cypress/e2e/steps/**/*.js"
    ],
    "html": {
      "enabled": true
    }
  }
}
